<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Images/ckf_theme/swatcha.PNG" alt="Theme A - Mint">
            <div class="carousel-caption">
               
                <button onclick="makeCKF_ThemeChoice('A');" class="btn btn-success " title="Theme A - Minty"><span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span> Choose Theme A - Minty <span class="glyphicon glyphicon-hand-left" aria-hidden="true"></span></button>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/ckf_theme/swatchb.PNG" alt="Theme B - Sun">
            <div class="carousel-caption">
                <button onclick="makeCKF_ThemeChoice('B');" class="btn btn-danger" title="Theme B - Sunshine"><span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span> Choose Theme B - Sunshine <span class="glyphicon glyphicon-hand-left" aria-hidden="true"></span> </button>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/ckf_theme/swatchc.PNG" alt="Theme C - Chocolate">
            <div class="carousel-caption">
                <button onclick="makeCKF_ThemeChoice('C');" class="btn btn-warning" title="Theme B - Sunshine"><span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span> Choose Theme C - Chocolate <span class="glyphicon glyphicon-hand-left" aria-hidden="true"></span> </button>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/ckf_theme/swatchd.PNG" alt="Theme D - Pink Panther">
            <div class="carousel-caption">
                <button onclick="makeCKF_ThemeChoice('D');" class="btn btn-info" title="Theme B - Sunshine"><span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span> Choose Theme D - Pink Panther <span class="glyphicon glyphicon-hand-left" aria-hidden="true"></span> </button>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/ckf_theme/swatche.PNG" alt="Theme E - Midnight">
            <div class="carousel-caption">
                <button onclick="makeCKF_ThemeChoice('E');" class="btn btn-primary" title="Theme B - Sunshine"><span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span> Choose Theme E - Midnight <span class="glyphicon glyphicon-hand-left" aria-hidden="true"></span> </button>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/ckf_theme/swatchf.PNG" alt="Theme F - Bee">
            <div class="carousel-caption">
                <button onclick="makeCKF_ThemeChoice('F');" class="btn btn-danger" title="Theme B - Sunshine"><span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span> Choose Theme F - Bee <span class="glyphicon glyphicon-hand-left" aria-hidden="true"></span> </button>
            </div>
        </div>

    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>